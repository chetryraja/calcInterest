<odoo>
    <template id="report_interest_calculation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Interest Calculation Report</h2>
                    <p><strong>Principal Amount:</strong> <t t-esc="doc.principal_amount"/> </p>
                    <p><strong>Interest Rate:</strong> <t t-esc="doc.interest_rate"/>%</p>
                    <p><strong>Time Period:</strong> <t t-esc="doc.time_period"/> years</p>
                    <p><strong>Interest Type:</strong> <t t-esc="doc.interest_type"/></p>
                    <p><strong>Simple Interest:</strong> <t t-esc="doc.simple_interest"/></p>
                    <p><strong>Compound Interest:</strong> <t t-esc="doc.compound_interest"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>

